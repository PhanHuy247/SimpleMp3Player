<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >
            <TextView
                android:id="@+id/txtchartPlayBackNumber"
                android:text="1"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_width="48dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/imgPlayBack"
                android:layout_toRightOf="@+id/txtchartPlayBackNumber"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_toRightOf="@id/imgPlayBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:id="@+id/txtNameSongPlayBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nameSongPlayBack"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtNameArtistPlayBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NameArtistPlayBack"/>
                    <TextView
                        android:id="@+id/categoryPlayBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LossLess"
                        android:textColor="@color/textChartSong"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>