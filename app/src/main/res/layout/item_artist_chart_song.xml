
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/txtchartNumberChartSong"
                android:text="1"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_width="48dp"
                android:paddingTop="16dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_toRightOf="@id/txtchartNumberChartSong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:id="@+id/txtNameSongChartSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nameSongPlayBack"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/colorAccent"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtNameArtistChartSong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="NameArtistPlayBack"/>
                    <TextView
                        android:id="@+id/categoryChartSong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LossLess"
                        android:textColor="@color/textChartSong"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>