<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/images"
        android:alpha = "0.29"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <TextView
            android:id="@+id/text_songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_artist"
            android:layout_below="@id/text_songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_music"
            android:layout_below="@id/text_artist"
            android:layout_width="@dimen/image_dimen_width"
            android:layout_height="@dimen/image_dimen_height"
            android:layout_centerInParent="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/images2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/song_duration"
            android:layout_below="@id/image_music"
            android:orientation="horizontal"
            android:weightSum="8">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/text_eslapedTime"/>
            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:id="@+id/seekBar_progressBar"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/text_timeLeft"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="12"
            android:gravity="center"
            android:id="@+id/functionBar"
            android:layout_below="@id/song_duration"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="@dimen/imageButtonDimens"
                android:layout_height="@dimen/imageButtonDimens"
                android:id="@+id/button_shuffle"
                android:layout_weight="2"
                android:background="@color/transparent"
                android:src="@drawable/ic_shuffle_red_300_36dp"/>
            <ImageButton
                android:layout_width="@dimen/imageButtonDimens"
                android:layout_height="@dimen/imageButtonDimens"
                android:layout_weight="2"
                android:id="@+id/button_previous"
                android:background="@color/transparent"
                android:src="@drawable/ic_skip_previous_red_300_36dp"/>
            <ImageButton
                android:layout_width="@dimen/imageButtonDimens"
                android:layout_height="@dimen/imageButtonDimens"
                android:layout_weight="2"
                android:id="@+id/button_play"
                android:background="@color/transparent"
                android:src="@drawable/ic_pause_circle_outline_red_300_18dp"/>
            <ImageButton
                android:layout_width="@dimen/imageButtonDimens"
                android:layout_height="@dimen/imageButtonDimens"
                android:layout_weight="2"
                android:id="@+id/button_next"
                android:background="@color/transparent"
                android:src="@drawable/ic_skip_next_red_300_36dp"/>
            <ImageButton
                android:id="@+id/button_repeat"
                android:layout_width="@dimen/imageButtonDimens"
                android:layout_height="@dimen/imageButtonDimens"
                android:layout_weight="2"
                android:background="@color/transparent"
                android:src="@drawable/ic_repeat_red_300_36dp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
